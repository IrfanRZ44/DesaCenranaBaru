<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_small"
        android:id="@+id/rlTop"
        android:background="@drawable/radius_bottom_gradient"
        >

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="@dimen/width30"
            android:layout_height="@dimen/width30"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/width30"
            android:background="@drawable/border_circle_transparent_gray"
            android:src="@drawable/ic_arrow_white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imgBack"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/width40"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_standard_big" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"
                android:id="@+id/textTujuan"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/text_big"
                android:text="@string/lokasi_anda"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/putihAsli"
                android:textSize="@dimen/text_standard_et"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/text_big"
                android:id="@+id/textAlamat"
                android:textAlignment="center"
                />

        </LinearLayout>
    </RelativeLayout>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/text_big"
        android:src="@drawable/ic_true_white"
        android:background="@drawable/border_circle_green"
        android:padding="@dimen/margin_standard"
        android:id="@+id/btnFinish"
        />

</RelativeLayout>