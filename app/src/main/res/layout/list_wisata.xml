<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small"
    app:cardBackgroundColor="@color/putihAsli"
    app:cardElevation="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_standard"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_standard"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/imgName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_alphabet"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_standard"
            android:maxEms="2"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/text_standard_big"
            android:fontFamily="@font/open_sans"
            android:maxLines="1"
            android:layout_toRightOf="@+id/imgName"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDesc"
            android:layout_below="@+id/textNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:textColor="@color/biru1"
            android:textSize="@dimen/text_small"
            android:fontFamily="@font/open_sans"
            android:lines="2"
            android:maxLines="2"
            android:layout_toRightOf="@+id/imgName"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>