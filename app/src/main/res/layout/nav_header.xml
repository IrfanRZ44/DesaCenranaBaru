<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="match_parent"
    n1:layout_height="@dimen/width120"
    n1:background="@drawable/gradient_primary_vertical"
    n1:padding="@dimen/margin_standard_big"
    n1:theme="@style/ThemeOverlay.AppCompat.Light"
    n1:orientation="horizontal"
    >

    <androidx.appcompat.widget.AppCompatImageView
        n1:id="@+id/image_person"
        n1:layout_width="@dimen/width60"
        n1:layout_height="@dimen/width60"
        n1:layout_gravity="center_vertical"
        n1:layout_margin="@dimen/margin_standard_big"
        n1:src="@drawable/logo"
        />

    <androidx.appcompat.widget.AppCompatTextView
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_marginTop="@dimen/margin_standard"
        n1:layout_marginBottom="@dimen/margin_standard"
        style="@style/textStandardWhite"
        n1:id="@+id/text_nama"
        n1:layout_gravity="bottom"
        n1:gravity="bottom"
        n1:maxLines="3"
        n1:text="@string/app_name"
        />
</androidx.appcompat.widget.LinearLayoutCompat>