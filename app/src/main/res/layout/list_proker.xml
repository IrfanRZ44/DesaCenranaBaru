<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small"
    app:cardBackgroundColor="@color/putihAsli"
    app:cardElevation="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_standard"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_standard"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_toLeftOf="@+id/textStatus"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/text_standard_big"
            android:fontFamily="@font/open_sans"
            android:maxLines="2"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_alignParentRight="true"
            android:textColor="@color/biru1"
            android:textSize="@dimen/text_small"
            android:fontFamily="@font/open_sans"
            android:maxLines="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textJK"
            android:layout_below="@+id/textNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toLeftOf="@+id/textStatus"
            android:textColor="@color/red1"
            android:textSize="@dimen/text_small"
            android:fontFamily="@font/open_sans"
            android:maxLines="1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textNIK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/putihGelap3"
            android:layout_below="@+id/textJK"
            android:layout_toLeftOf="@+id/textStatus"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/text_small"
            android:lines="2"
            android:maxLines="2"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/width80"
            android:layout_height="@dimen/width80"
            android:id="@+id/img"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>